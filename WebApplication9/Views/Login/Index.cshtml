@{
    ViewData["Title"] = "Inicio de Sesión";
}

<div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
        <h2 class="text-primary mb-4 text-center">Inicio de Sesión</h2>
        <form asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Campo de correo electrónico -->
            <div class="form-group mb-4">
                <label for="email" class="form-label">Correo Electrónico</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <input type="email" name="email" class="form-control" placeholder="Ingrese su correo" required />
                </div>
            </div>

            <!-- Campo de contraseña -->
            <div class="form-group mb-4">
                <label for="contraseña" class="form-label">Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input type="password" name="contraseña" class="form-control" placeholder="Ingrese su contraseña" required />
                </div>
            </div>

            <!-- Botón de inicio de sesión -->
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-block">
                    <i class="fas fa-sign-in-alt me-2"></i> Iniciar Sesión
                </button>
            </div>
        </form>

        <!-- Enlace para recuperar contraseña -->
        <div class="text-center mt-3">
            <a asp-controller="Register" asp-action="Index" class="text-secondary">Crea tu cuenta</a>
        </div>
    </div>
</div>

