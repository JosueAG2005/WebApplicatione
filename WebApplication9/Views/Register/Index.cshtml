@{
    ViewData["Title"] = "Registro de Usuario";
}

<div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-primary mb-4 text-center">Registro de Usuario</h2>
        <form asp-controller="Register" asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Campo de nombre completo -->
            <div class="form-group mb-4">
                <label for="nombre" class="form-label">Nombre Completo</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="fas fa-user"></i>
                    </span>
                    <input type="text" name="nombre" class="form-control" placeholder="Ingrese su nombre completo" required />
                </div>
            </div>

            <!-- Campo de correo electrónico -->
            <div class="form-group mb-4">
                <label for="email" class="form-label">Correo Electrónico</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <input type="email" name="email" class="form-control" placeholder="Ingrese su correo electrónico" required />
                </div>
            </div>

            <!-- Campo de contraseña -->
            <div class="form-group mb-4">
                <label for="contraseña" class="form-label">Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input type="password" name="contraseña" class="form-control" placeholder="Ingrese su contraseña" required />
                </div>
            </div>

            <!-- Campo de confirmación de contraseña -->
            <div class="form-group mb-4">
                <label for="confirmarContraseña" class="form-label">Confirmar Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input type="password" name="confirmarContraseña" class="form-control" placeholder="Confirme su contraseña" required />
                </div>
            </div>

            <!-- Tipo de usuario -->
            <div class="form-group mb-4">
                <label for="tipoUsuario" class="form-label">Tipo de Usuario</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="fas fa-user-tag"></i>
                    </span>
                    <select name="tipoUsuario" class="form-select" required>
                        <option value="">Seleccione el tipo de usuario</option>
                        <option value="jurado">Jurado</option>
                        <option value="participante">Participante</option>
                    </select>
                </div>
            </div>

            <!-- Botón de registro -->
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-block">
                    <i class="fas fa-user-plus me-2"></i> Registrarse
                </button>
            </div>
        </form>

        <!-- Enlace para iniciar sesión si ya tiene una cuenta -->
        <div class="text-center mt-3">
            <a href="/Login" class="text-secondary">¿Ya tienes una cuenta? Inicia sesión</a>
        </div>
    </div>
</div>
